<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/24.0.1"
      fx:controller="App.BuscarRutaFXMLController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    
    <Label text="Buscar Ruta entre Aeropuertos" style="-fx-font-size: 18;"/>
    
    <HBox spacing="10" alignment="CENTER">
        <Label text="Origen:"/>
        <ComboBox fx:id="comboOrigen" prefWidth="150"/>
        <Label text="Destino:"/>
        <ComboBox fx:id="comboDestino" prefWidth="150"/>
    </HBox>
    
    <Button text="Buscar" onAction="#buscarRuta"/>

    <Label fx:id="labelDistancia" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
    
    <ListView fx:id="listaRuta" prefHeight="200" prefWidth="400"/>

    <Button text="Cerrar" onAction="#cerrarVentana"/>
</VBox>
