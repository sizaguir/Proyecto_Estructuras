<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/24.0.1"
            fx:controller="aeropuertovuelos.MostrarVuelosFXMLController">

    <top>
        <Label fx:id="tituloLabel" text="Vuelos del Aeropuerto"
               style="-fx-font-size: 18; -fx-padding: 10;"/>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
            <TableView fx:id="tablaVuelos" prefHeight="400" prefWidth="900">
                <columns>
                    <TableColumn fx:id="colOrigen" prefWidth="100" text="Origen"/>
                    <TableColumn fx:id="colPaisOrigen" prefWidth="120" text="País Origen"/>
                    <TableColumn fx:id="colCiudadOrigen" prefWidth="120" text="Ciudad Origen"/>
                    <TableColumn fx:id="colDestino" prefWidth="100" text="Destino"/>
                    <TableColumn fx:id="colPaisDestino" prefWidth="120" text="País Destino"/>
                    <TableColumn fx:id="colCiudadDestino" prefWidth="120" text="Ciudad Destino"/>
                    <TableColumn fx:id="colPeso" prefWidth="100" text="Peso"/>
                    <TableColumn fx:id="colAerolinea" prefWidth="150" text="Aerolínea"/>
                </columns>
            </TableView>

            <!-- Botones de acción -->
            <HBox alignment="CENTER" spacing="15">
                <Button text="Editar Vuelo" onAction="#editarVuelo"/>
                <Button text="Eliminar Vuelo" onAction="#eliminarVuelo"/>
                <Button text="Cerrar" onAction="#volver"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
