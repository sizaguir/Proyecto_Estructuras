<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="aeropuertovuelos.EliminarVueloFXMLController">
    <center>
        <VBox alignment="CENTER" prefHeight="376.0" prefWidth="885.0" spacing="10" style="-fx-padding: 20;">
            <TableView fx:id="tablaVuelos" prefHeight="300" prefWidth="833.0">
            <columns>
                <TableColumn fx:id="colOrigen" prefWidth="100.0" text="Origen" />
                <TableColumn fx:id="colPaisOrigen" prefWidth="100.0" text="País Origen" />
                <TableColumn fx:id="colCiudadOrigen" prefWidth="100.0" text="Ciudad Origen" />

                <TableColumn fx:id="colDestino" prefWidth="100.0" text="Destino" />
                <TableColumn fx:id="colPaisDestino" prefWidth="100.0" text="País Destino" />
                <TableColumn fx:id="colCiudadDestino" prefWidth="100.0" text="Ciudad Destino" />

                <TableColumn fx:id="colPeso" prefWidth="100" text="Peso" />
                <TableColumn fx:id="colAerolinea" prefWidth="150" text="Aerolínea" />
            </columns>
            </TableView>

            <HBox alignment="CENTER" spacing="10">
                <Button onAction="#eliminarVuelo" text="Eliminar Vuelo" />
                <Button onAction="#volver" text="Volver" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
